					<posy>0</posy>
					<width>400</width>
					<height>30</height>
					<font>font12</font>
					<textcolor>grey2</textcolor>
					<selectedcolor>green</selectedcolor>
					<align>right</align>
					<aligny>center</aligny>
					<info>ListItem.Label2</info>
